{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ctest release",
            "type": "shell",
            "command": "ctest -C ${CMAKE_BUILD_TYPE} --rerun-failed --output-on-failure -j 4",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "build release",
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            }
        },
        {
            "label": "ctest debug",
            "type": "shell",
            "command": "ctest -C ${CMAKE_BUILD_TYPE} --rerun-failed --output-on-failure -j 4",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "build release",
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "mkdir -p build/debug && cmake --build ./build/debug --target all -j 16",
            "dependsOn": "configure debug",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "mkdir -p build/release && cmake --build ./build/release --target all -j 16",
            "dependsOn": "configure release",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "configure debug",
            "type": "shell",
            "command": "mkdir -p build/debug && cmake -S . -B ./build/debug -DCMAKE_BUILD_TYPE=Debug"
        },
        {
            "label": "configure release",
            "type": "shell",
            "command": "mkdir -p build/release && cmake -S . -B ./build/release -DCMAKE_BUILD_TYPE=Release"
        },
        {
            "type": "shell",
            "label": "build cmake windows release",
            "command": "cmake --build .  --config Release",
            "detail": "CMake template test task",
            "dependsOn": "configure cmake windows release",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "configure cmake windows release",
            "command": "cmake ../ -G 'Visual Studio 17 2022' -A x64 -T v143 -DCMAKE_TOOLCHAIN_FILE='generators/conan_toolchain.cmake'  -DCMAKE_POLICY_DEFAULT_CMP0091=NEW -DCMAKE_BUILD_TYPE=Release",
            "detail": "CMake template test task",
            "dependsOn": "conan run file run",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "type": "shell",
            "label": "conan run file run",
            "command": "${workspaceFolder}/build/generators/conanrun.bat",
            "dependsOn": "conan build file run",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "conan build file run",
            "command": "${workspaceFolder}/build/generators/conanbuild.bat",
            "dependsOn": "conan install",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "conan install",
            "command": "conan install . --build=missing",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
