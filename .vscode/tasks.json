{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "cmake --build ./build --target all",
            "dependsOn": "configure debug",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cmake --build ./build --target all",
            "dependsOn": "configure release",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "configure debug",
            "type": "shell",
            "command": "cmake -S . -B ./build -DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "dependsOn": "configure"
        },
        {
            "label": "configure release",
            "type": "shell",
            "command": "cmake -S . -B ./build -DCMAKE_BUILD_TYPE=Release",
            "dependsOn": "configure"
        }
    ]
}