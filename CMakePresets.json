{
    "version": 8,
    "configurePresets": [
        {
            "name": "rel_with_deb_info",
            "displayName": "RelWithDebInfo",
            "description": "Using compilers: C = /usr/bin/gcc-12, CXX = /usr/bin/g++-12",
            "binaryDir": "${sourceDir}/build/debug/${presetName}/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/debug/${presetName}/",
                "CMAKE_C_COMPILER": "/usr/bin/gcc-12",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-12",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "release",
            "displayName": "release",
            "description": "Using compilers: C = /usr/bin/gcc-12, CXX = /usr/bin/g++-12",
            "binaryDir": "${sourceDir}/build/debug/${presetName}/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/debug/${presetName}/",
                "CMAKE_C_COMPILER": "/usr/bin/gcc-12",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-12",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },{
            "name": "debug",
            "displayName": "debug",
            "description": "Using compilers: C = /usr/bin/gcc-12, CXX = /usr/bin/g++-12",
            "binaryDir": "${sourceDir}/build/debug/${presetName}/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/",
                "CMAKE_C_COMPILER": "/usr/bin/gcc-12",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-12",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
